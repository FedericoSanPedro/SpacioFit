datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  Admin
  Trainer
  Alumno
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(Alumno)
  createdAt DateTime @default(now())

  alumno   Alumno?
  trainer   Trainer?
}

model Alumno {
  id            Int           @id @default(autoincrement())

  userId        Int           @unique
  user          User          @relation(fields: [userId], references: [id])

  whatsapp      String?
  fechaInicio   DateTime      @default(now())
  estado        String        @default("ACTIVO")
  cumpleanos    DateTime?
  horasTotales  Int           @default(0)

  turnoId Int?
  turno   Turno? @relation(fields: [turnoId], references: [id])

  asistencias   Asistencia[]

  createdAt     DateTime      @default(now())
}

model Trainer {
  id          Int       @id @default(autoincrement())

  userId      Int       @unique
  user        User      @relation(fields: [userId], references: [id])

  telefono    String?
  especialidad String?

  createdAt   DateTime  @default(now())
}

model Turno {
  id        Int           @id @default(autoincrement())
  hora      String      // "07:30"
  alumnos   Alumno[]
  asistencias Asistencia[]
}

model Asistencia {
  id          Int           @id @default(autoincrement())
  fecha       DateTime
  asistio     Boolean

  alumnoId   Int      
  alumno     Alumno    @relation(fields: [alumnoId], references: [id])

  turnoId    Int      
  turno      Turno     @relation(fields: [turnoId], references: [id])

  @@unique([fecha, alumnoId, turnoId])
}

model Nivel {
  id              Int     @id @default(autoincrement())
  nombre          String
  horasMinimas    Int
  reconocimiento  String
  insignia        String?
}

