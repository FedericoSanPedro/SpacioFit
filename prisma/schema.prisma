datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Alumno {
  id            Int           @id @default(autoincrement())
  nombre        String
  email         String        @unique
  whatsapp      String?
  fechaInicio   DateTime
  estado        String
  cumpleanos    DateTime?
  createdAt     DateTime      @default(now())

  turnoId       Int
  turno         Turno         @relation(fields: [turnoId], references: [id])

  horasTotales  Int           @default(0)

  asistencias   Asistencia[]
  pagos         Pago[]
}


model Turno {
  id        Int           @id @default(autoincrement())
  hora      String      // "07:30"
  alumnos   Alumno[]
  asistencias Asistencia[]
}

model Asistencia {
  id          Int           @id @default(autoincrement())
  fecha       DateTime
  asistio     Boolean
  pago        Boolean

  alumnoId   Int      
  alumno     Alumno    @relation(fields: [alumnoId], references: [id])

  turnoId    Int      
  turno      Turno     @relation(fields: [turnoId], references: [id])

  @@unique([fecha, alumnoId, turnoId])
}

model Nivel {
  id              Int     @id @default(autoincrement())
  nombre          String
  horasMinimas    Int
  reconocimiento  String
  insignia        String?
}

model Pago {
  id          Int      @id @default(autoincrement())
  monto       Float
  fecha       DateTime @default(now())

  alumnoId    Int
  alumno      Alumno   @relation(fields: [alumnoId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
